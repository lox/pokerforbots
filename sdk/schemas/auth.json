{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pokerforbots.com/schemas/auth.json",
  "title": "Authentication Messages",
  "description": "Schema for authentication-related messages",
  
  "definitions": {
    "authData": {
      "type": "object",
      "properties": {
        "playerName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50,
          "pattern": "^[a-zA-Z0-9_-]+$",
          "description": "Player name for authentication"
        },
        "token": {
          "type": "string",
          "description": "Optional authentication token"
        }
      },
      "required": ["playerName"],
      "additionalProperties": false
    },
    
    "authResponseData": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean",
          "description": "Whether authentication was successful"
        },
        "playerId": {
          "type": "string",
          "description": "Assigned player ID if successful"
        },
        "error": {
          "type": "string",
          "description": "Error message if authentication failed"
        }
      },
      "required": ["success"],
      "additionalProperties": false,
      "if": {
        "properties": { "success": { "const": true } }
      },
      "then": {
        "required": ["playerId"]
      },
      "else": {
        "required": ["error"]
      }
    }
  },
  
  "oneOf": [
    {
      "title": "Auth Request",
      "allOf": [
        { "$ref": "message.json" },
        {
          "properties": {
            "type": { "const": "auth" },
            "data": { "$ref": "#/definitions/authData" }
          }
        }
      ]
    },
    {
      "title": "Auth Response",
      "allOf": [
        { "$ref": "message.json" },
        {
          "properties": {
            "type": { "const": "auth_response" },
            "data": { "$ref": "#/definitions/authResponseData" }
          }
        }
      ]
    }
  ]
}
